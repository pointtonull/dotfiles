# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    export PATH="$HOME/bin:$PATH"
fi

export EDITOR="vim"

vscode_dir_mac="$HOME/Downloads/Visual Studio Code.app/Contents/Resources/app/bin"
if [ -d "vscode_dir_mac" ] ; then
    export PATH="$PATH:$vscode_dir_mac"
fi

# FIXES mouse whell for gtk
export GDK_CORE_DEVICE_EVENTS=1
export TCLLIBPATH=~/.local/share/tkthemes

# Unwanted shadow around windows
MUFFIN_NO_SHADOWS=1

# RUST
if [ -f '$HOME/.cargo/env' ]; then
    source $HOME/.cargo/env
fi

export ANSIBLE_VAULT_PASSWORD_FILE=~/.ansible_vault_password

export GITHUB_TOKEN="9bb1d911e8908e88da7406cb1c04ec5a8a15f8e9"
export CIRCLECI_TOKEN="dbb1583f6599a00b794fab04e37b23454fedf56e"
