function! Blackdiff()
    let l:view_pos = winsaveview()
    normal yae
    diffthis
    rightb vnew /dev/null
    normal PGdd
    set filetype=python
    silent %!black -q -
    diffthis
    normal <C-w>h
    call winrestview(view_pos)
    normal <C-w>l
endfunction

