if [[ $(uname) == "Darwin" ]]; then
    alias pvim='parallel --tty nvim'
else
    function pvim {
        awk '

            {
                a[i++] = $0
            }

            END{
                print NR>"/dev/shm/pvim.total"
                for (i=0; i<NR; i++)
                    print a[i]
            }

        ' > /dev/shm/pvim.pipe
        cat /dev/shm/pvim.pipe | parallel --tty "notify-send -t 1000 {#}/$(cat /dev/shm/pvim.total); nvim -p {}"
    }
fi


function vimack {
    ack -l "$@" | awk '

        {
            a[i++] = $0
        }

        END{
            print NR>"/dev/shm/pvim.total"
            for (i=0; i<NR; i++)
                print a[i]
        }

    ' > /dev/shm/pvim.pipe
    cat /dev/shm/pvim.pipe \
        | parallel --tty "notify-send -t 1000 {#}/$(cat /dev/shm/pvim.total); nvim -p +/$@/ '{}'"
}

