function wifite.essid {
    cd
    sudo ifconfig wlan0 down
    sudo iwconfig wlan0 mode Monitor
    time sudo wifite -i wlan0 -e "$1"
    sleep 2
    sudo ifconfig wlan0 down
    sleep 2
    sudo iwconfig wlan0 mode Managed
    sleep 2
    sudo ifconfig wlan0 up
}

