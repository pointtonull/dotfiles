dvorak

if ! pidof keynav > /dev/null; then
    echo "Iniciando keynav" >> ./mensajes
    keynav > /dev/null &
fi

if ! pidof vubat > /dev/null; then
    echo "Iniciando power-manager" >> ./mensajes
    sleep 5; vubat > /dev/null &
fi

#if ! pidof xfce4-power-manager > /dev/null; then
