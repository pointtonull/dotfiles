#    xscreensaver -no-splash&
#else
#    echo "Reiniciando xscreensaver" >> ~/.mensajes
#    killall xscreensaver
#    xscreensaver -no-splash&
#fi

if ! pidof dropbox > /dev/null; then
    echo "Iniciando dropbox" >> ~/.mensajes
    dropbox start -i&
fi
