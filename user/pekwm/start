#!/bin/sh

#xmodmap $HOME/.Xmodmap &
fbsetbg -f images/default.jpg &
permutar dunst&

if ! pidof fbpanel > /dev/null; then
    echo "Iniciando fbpanel" >> ~/.mensajes
    fbpanel &
fi

#if ! pidof sonata > /dev/null; then
#    echo "Iniciando Sonata" >> ~/.mensajes
#    sonata --hidden&
