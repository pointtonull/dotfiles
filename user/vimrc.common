" ALE (Linting)
function! MyAleNext(direction)
    if 0 < a:direction
        echo 'Next'
        ALENext -wrap -info
        ALENext -wrap -warning
        ALENext -wrap -error
    else
        echo 'Prev'
        ALEPrevious -wrap -info
        ALEPrevious -wrap -warning
        ALEPrevious -wrap -error
    endif
endfunction

