#!/bin/sh
set -ex

sudo mkdir -p /etc/resolver
echo "address=/.local.globality.io/127.0.0.1" | sudo tee /etc/dnsmasq.conf
echo "nameserver 127.0.0.1" | sudo tee /etc/resolver/local.globality.io
grep 8.8.8.8 /etc/resolver/fallback || echo "nameserver 8.8.8.8" | sudo tee /etc/resolv.conf
sudo service dnsmasq restart
