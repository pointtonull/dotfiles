echo "Radio Infinito"

mplayer -quiet -loop 0 -cache 1024 -cache-min 25\
    "http://70.38.11.15:8020" 2> /dev/null | awk '

BEGIN{
    FS = ": "
}

/^Name/{
    uname = $2
}

/Genre/{
    ugenre = $2
}

/Artist:/{
    uartist = $2
}

/Title:/{
    utitle = $2
}

/^Demuxer/ && /Artist changed/{
    sub("Demuxer info Artist changed to ", "", $0)
    uartist = $0
}
    
/^Demuxer/ && /Title changed/{
    sub("Demuxer info Title changed to ", "", $0)
    utitle = $0
}

/^ICY/ && /StreamTitle/{
    sub("ICY Info: StreamTitle=", "", $0)
    print $0
    utitle = $0
}

utitle ~ "_"{
    gsub("_", " ", utitle)
}

utitle ~ " - "{
    n = split($2, l, " - ")
    uartist = l[n - 1]
    utitle = l[n]
}

uname{
    print " ===", uname, "==="
    uname = 0
}

ugenre{
    print "  ==", ugenre, "=="
    ugenre = 0
}

uartist{
    print "     " uartist ":"
    uartist = 0
}

utitle{
    print "       * " utitle
    utitle = 0
}

'
