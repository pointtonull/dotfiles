#!/bin/sh

awk -F ": " '

    {
        cont = $2;
        for (i=3; i<=NF; i++)
            cont = cont FS $i;
        h[$1] = cont
    }

    NF == 1 {
        h["Body"] = h["Body"] $0
    }

    /^Pub/ {
        ident = "";
        print h[$1];
        ident = ident "  ";
        if (h["Body"]){
            print ident h["Body"]; h["Body"] = "";
        }
        else {
            if (h["Title"]){
                print ident h["Title"];
            }
        };
        if (h["Link"])
            print ident h["Link"]
        system("sleep .1")
    }

'
